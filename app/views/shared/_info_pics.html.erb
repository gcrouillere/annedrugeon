<% @info1pictag = image_path ENV['INFO1'], class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}" %>

<% @info2pics = ENV['INFO2'].split(',').map(&:strip).reject{|e| ['"', "[", "]", ", "].include?(e)}.map{|e| image_path e} %>

<% @info3pictag = image_path ENV['INFO3'], class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}" %>

<% @info4pics = ENV['INFO4'].split(',').map(&:strip).reject{|e| ['"', "[", "]", ", "].include?(e)}.map{|e| image_path e} %>

<% if @admin %>

  <% if @admin.info1photo.present? %>
    <% @info1pictag = cl_image_path @admin.info1photo.path, class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}"%>
  <% end %>

  <% if @admin.info2photos.present? %>
    <% @info2pics = @admin.info2photos.map {|photo| cl_image_path photo.path} %>
  <% end %>

  <% if @admin.info3photo.present? %>
    <% @info3pictag = cl_image_path @admin.info3photo.path, class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}"%>
  <% end %>

  <% if @admin.info4photos.present? %>
    <% @info4pics = @admin.info4photos.map {|photo| cl_image_path photo.path} %>
  <% end %>

<% end %>

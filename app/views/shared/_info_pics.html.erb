<% @avatarpictag = image_tag ENV['AVATAR'], class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques" %>

<% @workshopictag = image_tag ENV['WORKSHOP'], class: "img-avatar", alt: "Atelier d'Anne Drugeon, créatrice de céramiques uniques" %>

<% @mappictag = image_tag ENV['MAP'], class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques" %>

<% @mappicpath = image_path ENV['MAP'] %>

<% @info1pictag = image_path ENV['INFO1'], class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques" %>

<% @info2pics = ENV['INFO2'].split(',').map(&:strip).reject{|e| ['"', "[", "]", ", "].include?(e)}.map{|e| image_path e} %>

<% @info3pictag = image_path ENV['INFO3'], class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques" %>

<% @info4pics = ENV['INFO4'].split(',').map(&:strip).reject{|e| ['"', "[", "]", ", "].include?(e)}.map{|e| image_path e} %>

<% @citypictag = image_tag ENV['CITY'], alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}" %>

<% @citypicpath = image_path ENV['CITY'] %>

<% if @admin %>

  <% if @admin.avatarphoto.present? %>
    <% @avatarpictag = cl_image_tag @admin.avatarphoto.path, class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques"%>
  <% end %>

  <% if @admin.workshopphoto.present? %>
    <% @workshopictag = cl_image_tag @admin.workshopphoto.path, class: "img-avatar", alt: "Atelier d' #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}" %>
  <% end %>

  <% if @admin.mapphoto.present? %>
    <% @mappictag = cl_image_tag @admin.mapphoto.path, class: "img-avatar", alt: "Localisation de l'atelier d' #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}" %>
    <% @mappicpath = @admin.mapphoto.path %>
  <% end %>

  <% if @admin.info1photo.present? %>
    <% @info1pictag = cl_image_path @admin.info1photo.path, class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques"%>
  <% end %>

  <% if @admin.info2photos.present? %>
    <% @info2pics = @admin.info2photos.map {|photo| cl_image_path photo.path} %>
  <% end %>

  <% if @admin.info3photo.present? %>
    <% @info3pictag = cl_image_path @admin.info3photo.path, class: "img-avatar", alt: "Anne Drugeon, créatrice de céramiques uniques"%>
  <% end %>

  <% if @admin.info4photos.present? %>
    <% @info4pics = @admin.info4photos.map {|photo| cl_image_path photo.path} %>
  <% end %>

  <% if  @admin.cityphoto.present? %>
    <% @citypictag = cl_image_tag(cl_image_path @admin.cityphoto.path, alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}") %>
      <% @citypicpath = @admin.cityphoto.path %>
  <% end %>

<% end %>

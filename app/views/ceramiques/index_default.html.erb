<% content_for(:title_tag) do %>
  <%= t(:index_title)%>
<% end %>
<% if @front_offer %>
  <% content_for(:meta_image) do %>
    <%= cl_image_path @front_offer.ceramiques.first.photos[0].path %>
  <% end %>
  <% content_for(:description) do %>
    <% @front_offer.discount > 0 ? discount = t(:discount_percentage, amount: "#{(@front_offer.discount * 100).to_i}") : discount = "" %>
    <%= "#{@front_offer.title} #{discount} - #{@front_offer.description}".squish %>
  <% end %>
<% else %>
  <% content_for(:description) do %>
    <%= t(:index_description)%>
  <% end %>
<% end %>

<%= render 'shared/lighttheme_photo_loading'%>

<div class="container">
  <div class="row">
<!-- INDEX H1 :  EITHER A DISCOUNT OFFER DIV, OR A SIMPLE H1 -->
    <% if @front_offer && params[:offer] == nil %>
      <div class="hidden-xs hidden-sm col-md-12 info-top">
        <%= render 'shared/general_info_bubble' %>
      </div>
      <div class="collection-h1 ceramiques-index-h1 hidden-md hidden-lg">
        <h1><%= @h1_content %></h1>
        <hr>
      </div>
    <% elsif params[:offer].present? %>
      <div class="collection-h1 ceramiques-index-h1 hidden-xs hidden-sm">
        <h1> <%= @front_offer.title %> <%=t(:offer_products)%></h1>
        <hr>
      </div>
    <% else %>
      <div class="collection-h1 ceramiques-index-h1 hidden-xs hidden-sm">
        <h1><%= @h1_content %></h1>
        <hr>
      </div>
       <div class="collection-h1 ceramiques-index-h1 hidden-md hidden-lg">
        <h1> <%= @h1_content %></h1>
        <hr>
      </div>
    <% end %>

    <%= render 'shared/default_filter' %>

    <%= render 'shared/lighttheme_products_cards' %>

  </div>
</div>

<% content_for(:after_js) do %>
  <script type="application/ld+json">
  {
    "@context": "http://schema.org/",
    "@type": "Product",
    "name": "<%=t(:les_produits_de_machin, product:"#{ENV['MODEL']}", name: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}")%>",
    "image": <%= raw @ceramiques.map {|ceramique| cl_image_path ceramique.photos[0].path}.to_json %>,
    "brand": {
      "@type": "Thing",
      "name": "<%= t(:name, name:"#{ENV['LASTNAME'].capitalize}")%>"
    },
    "offers": {
      "@type": "AggregateOffer",
      "lowPrice": "<%= humanized_money((@ceramiques.minimum(:price_cents) || 0) / 100) %>",
      "highPrice": "<%= humanized_money((@ceramiques.maximum(:price_cents) || 0) / 100) %>",
      "priceCurrency": "EUR"
    }
  }
  </script>
  <script
  type="text/javascript"
  async defer
  src="//assets.pinterest.com/js/pinit.js"
  data-pin-round="true"
  data-pin-tall="15px"
></script>
<%= render 'shared/facebookshare' %>
<% end %>

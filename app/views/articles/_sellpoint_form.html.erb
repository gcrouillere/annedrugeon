<h2>Ajouter une nouvelle boutique : </h2>
<%= simple_form_for(Article.new) do |form| %>
  <%= form.input :title, as: :text, required: true, label: t(:name, name: "Nom") %>
  <%= form.input :content, required: true, label: t(:address) %>
  <%= form.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
  <%= form.input :name, :as => :hidden, :input_html => { :value => "sellpoint" } %>
  <%= form.button :submit, t(:save), id: "temoignage-submit", class: "btn-primary" %>
<% end %>




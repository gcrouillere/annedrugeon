<h4>Ajouter un évènement éphémère : </h4>
<%= simple_form_for(Article.new) do |form| %>
  <%= form.input :title, as: :text, required: true, label: t(:name, name: "Titre") %>
  <%= form.input :content, required: true, label: "Contenu" %>
  <%= form.input :article_main_photo, as: :attachinary %>
  <%= form.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
  <%= form.input :name, :as => :hidden, :input_html => { :value => "ephemeral" } %>
  <%= form.button :submit, t(:save), id: "temoignage-submit", class: "btn-primary" %>
<% end %>

<% content_for(:description) do %>

<% end %>
<% content_for(:title_tag) do %>

<% end %>

<%= render 'shared/sell_pics' %>

<div class="container">
  <div class="row">

    <div class="collection-h1">
      <h1><%= t(:selling_point)%></h1>
      <hr>
    </div>

    <!-- LAPTOP -->
    <div class="col-xs-12 ephemerals-list">
      <div class="collection-h1">
        <h2><%= t(:ephemeral)%></h2>
        <hr>
      </div>
      <% if user_signed_in? && current_user.admin %>
        <%= render 'articles/ephemeral_form' %>
        <div class="wrapper-lighttheme-sellpoint points-de-vente">
          <% @ephemerals.each do |ephemeral|  %>
            <div class="ephemeral">
              <%= link_to ephemeral, method: :delete, class: "ephemeral-delete-link" do %>
                <i class="fa fa-trash"></i>
              <% end %>
              <%= render 'articles/ephemeral_show', ephemeral: ephemeral %>
            </div>
          <% end %>
        </div>
      <% else %>
        <% if @ephemerals.any? %>
          <div class="wrapper-lighttheme-sellpoint points-de-vente">
            <% @ephemerals.each do |ephemeral|  %>
              <div class="ephemeral">
                <%= render 'articles/ephemeral_show', ephemeral: ephemeral %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="collection-h1">
      <h2><%= t(:shops)%></h2>
      <hr>
    </div>

    <% if user_signed_in? && current_user.admin %>
      <div class="sellpoints-bloc">
        <%= render 'articles/sellpoint_form' %>
      </div>
    <% end %>

    <% if @sellpoints.any? %>
      <div class="sellpoints-list">
        <% @sellpoints.each do |sellpoint| %>
          <%= render 'articles/sellpoint_show', sellpoint: sellpoint %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
